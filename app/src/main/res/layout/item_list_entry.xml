<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="@dimen/list_item_vertical_spacing"
    android:layout_marginRight="@dimen/list_item_vertical_spacing"
    android:layout_marginBottom="@dimen/list_item_horizontal_spacing"
    android:layout_marginTop="@dimen/list_item_horizontal_spacing"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/list_item_vertical_spacing"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_marginLeft="@dimen/list_item_vertical_spacing"
            android:maxLines="1"
            android:paddingTop="@dimen/list_item_vertical_spacing"
            android:textColor="@color/black_87"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_marginLeft="@dimen/list_item_vertical_spacing"
            android:maxLines="2"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_size_14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>